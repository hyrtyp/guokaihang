<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/welcome_background" >

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >
        <ImageView 
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guokaihang_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dip"
            />
        <ImageView
        	android:id="@id/homepage_dzb_top"
       		android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:src="@drawable/guokaihang_top_home" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/botton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
        android:visibility="gone">

        <ImageView
            android:id="@id/home_ceinet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/homepage_botton_button_3" />

        <ImageView
            android:id="@id/home_witsea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/home_ceinet"
            android:src="@drawable/homepage_botton_button_2" />

        <ImageView
            android:id="@id/home_main_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/home_witsea"
            android:src="@drawable/homepage_botton_num" />

        <ImageView
            android:id="@id/home_announcement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/home_main_num"
            android:src="@drawable/homepage_botton_button_1" />

        <ImageView
            android:id="@id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/home_announcement"
            android:src="@drawable/homepage_botton_left" />

        <ImageView
            android:id="@id/home_personcenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/home_ceinet"
            android:src="@drawable/homepage_botton_button_4" />

        <ImageView
            android:id="@id/home_disclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/home_personcenter"
            android:src="@drawable/homepage_botton_button_5" />

        <ImageView
            android:id="@id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/home_disclaimer"
            android:src="@drawable/homepage_botton_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <RelativeLayout
            android:id="@id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/guokaihang_login_03" >

            <RelativeLayout
                android:layout_width="100.0dip"
                android:layout_height="100.0dip"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <Button
                    android:id="@id/back_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/back_back" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/imageView3"
            android:background="@drawable/login_8" />

        <LinearLayout
            android:id="@id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imageView4"
            android:layout_below="@id/imageView4"
            android:background="@drawable/login_3"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="300.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" >

                <TextView
                    android:layout_width="130.0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="用户名 :"
                    android:textColor="#ff000000"
                    android:textSize="20.0sp" />

                <EditText
                    android:id="@id/ui_getpassword_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ui_login_etborder"
                    android:maxWidth="150.0dip"
                    android:paddingLeft="10.0dip"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" >

                <TextView
                    android:layout_width="130.0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingLeft="19.0dip"
                    android:text="电子邮箱 :"
                    android:textColor="#ff000000"
                    android:textSize="20.0sp" />

                <EditText
                    android:id="@id/ui_getpassword_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ui_login_etborder"
                    android:maxWidth="150.0dip"
                    android:paddingLeft="10.0dip"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" >

                <ImageView
                    android:id="@id/ui_login_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10.0dip"
                    android:src="@drawable/ui_submit_submit" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="40.0dip"
                android:gravity="bottom"
                android:text="温馨提示："
                android:textColor="#ff092982" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:padding="10.0dip"
                android:text="    密码找回成功后。我们将以邮件的形式下发到您的邮箱，请登录邮箱查看。如有疑问请拨打上方咨询电话。我们将会竭诚为您服务。"
                android:textColor="#ff000000" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView3"
            android:layout_alignRight="@id/imageView5"
            android:background="@drawable/login_4" />

        <ImageView
            android:id="@id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView4"
            android:layout_toRightOf="@id/imageView5"
            android:background="@drawable/login_5" />

        <ImageView
            android:id="@id/ui_regist_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView6"
            android:layout_toRightOf="@id/imageView5"
            android:background="@drawable/login_6" />
    </RelativeLayout>

</RelativeLayout>