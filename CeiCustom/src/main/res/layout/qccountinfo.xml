<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null" >

    <ImageView
        android:id="@id/qccountinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50.0dip"
        android:layout_marginTop="30.0dip"
        android:background="@drawable/qccount_info" 
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/qccountinfo" >

        <ImageView
            android:id="@id/qccountinfo_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/phone_study_dotted_line" 
            android:visibility="gone"/>

        <TextView
            android:id="@id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qccountinfo_line"
            android:layout_marginLeft="50.0dip"
            android:layout_marginTop="20.0dip"
            android:text="账   号:"
            android:textColor="#ff000000"
            android:textSize="18.0sp" />

        <TextView
            android:id="@id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginLeft="50.0dip"
            android:layout_marginTop="20.0dip"
            android:text="积   分:"
            android:textColor="#ff000000"
            android:textSize="18.0sp" />

        <TextView
            android:id="@id/personinfo_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qccountinfo_line"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_toRightOf="@id/textView1"
            android:textColor="#ff000000"
            android:textSize="18.0sp" />

        <TextView
            android:id="@id/personinfo_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/personinfo_userid"
            android:layout_alignTop="@id/textView2"
            android:textColor="#ff000000"
            android:textSize="18.0sp" />
    </RelativeLayout>

</RelativeLayout>