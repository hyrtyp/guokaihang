<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/report_intro_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/report_intro_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/top"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/guokaihang_top"
        android:fadingEdge="none"
        android:fadingEdgeLength="0.0dip" >

        <ImageButton
            android:id="@id/ib_bg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/back" />

        <ImageButton
            android:id="@id/report_intro_bookshelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/guokaihang_zhoukan" />

        <ImageView
            android:id="@id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50.0dip"
            android:layout_toRightOf="@id/ib_bg_back"
            android:src="@drawable/guokaihang_zkyq" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/top" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/top"
            android:orientation="vertical"
            android:weightSum="11.0" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4.0"
                android:padding="20.0dip" >

                <ImageView
                    android:id="@id/report_intro_book"
                    android:layout_width="100.0dip"
                    android:layout_height="130.0dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30.0dip"
                    android:background="@drawable/report1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/report_intro_book"
                    
                    android:orientation="vertical"
                    android:paddingLeft="30.0dip"
                    android:paddingRight="30.0dip"
                    android:paddingTop="10.0dip" 
                    >

                    <TextView
                        android:id="@id/report_intro_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8.0dip"
                        android:text="报告主题"
                        android:textColor="#ff000088"
                        android:textSize="28.0sp" 
                       />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/phone_study_dotted_line" 
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="8.0dip" 
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bglitt" />

                        <TextView
                            android:id="@id/report_intro_zuoz_bq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5.0dip"
                            android:text="作者："
                            android:textColor="@color/black"
                            android:textSize="15.0sp" />

                        <TextView
                            android:id="@id/report_intro_zuoz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5.0dip"
                            android:text="张三"
                            android:textColor="@color/black"
                            android:textSize="15.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" 
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/zjzx_point"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@id/report_intro_price_bq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5.0dip"
                            android:text="价格："
                            android:textColor="@color/black"
                            android:textSize="15.0sp" />

                        <TextView
                            android:id="@id/report_intro_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5.0dip"
                            android:text="22"
                            android:textColor="#ffff0000"
                            android:textSize="15.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/zjzx_point"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5.0dip"
                            android:text="发布时间："
                            android:textColor="@color/black"
                            android:textSize="24.0sp" />

                        <TextView
                            android:id="@id/report_intro_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5.0dip"
                            android:text="2012"
                            android:textColor="@color/black"
                            android:textSize="24.0sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@id/report_intro_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="#00000000"
                    android:paddingBottom="20.0dip"
                    android:paddingRight="30.0dip"
                    android:src="@drawable/yjbg_read" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_weight="4.0"
                android:background="@drawable/report_intro_text_bg" 
                android:visibility="gone">

                <ImageView
                    android:id="@id/report_intro_jj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/yjbg_report_info_shuoming" />

                <TextView
                    android:id="@id/report_intro_jiej"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/report_intro_jj"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@null"
                    android:lineSpacingExtra="3.0dip"
                    android:textColor="#ff000000"
                    android:textSize="22.0px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="20.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/report_intro_text_bg" >

                <ImageView
                    android:id="@id/report_intro_ml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/guokaihang_intro_ml" />
                
                        <LinearLayout  android:layout_width="fill_parent" android:weightSum="10"  android:layout_below="@id/report_intro_ml"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                <LinearLayout
                    android:id="@id/report_intro_mul"
                    android:layout_width="fill_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@null"
                    android:orientation="vertical">
                       	    
                        
                       
                   </LinearLayout>
                    		
               
                    		
                    		  <LinearLayout
                    android:id="@+id/report_intro_mulnum"
                    android:layout_width="fill_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@null"
                    android:orientation="vertical">
                       	    
                        
                       
                   </LinearLayout>
                    
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>