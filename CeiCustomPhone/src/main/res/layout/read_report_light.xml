<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/read_report_pop_light_bg"
    android:layout_width="300.0dip"
    android:layout_height="250.0dip"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@id/yjbg_light_title"
        android:layout_margin="@dimen/view_margin_small"
        style="@style/title_tv"
        android:text="亮度调节" />

    <SeekBar
        android:id="@id/yjbg_light_seekbar"
        android:layout_width="186.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin_small"
        android:progressDrawable="@drawable/read_report_barstyle"
        android:thumb="@drawable/read_report_pop_light_but"
        android:thumbOffset="0.0dip" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin_small">

        <ImageButton
            android:id="@id/yjbg_light_jie"
            android:background="#00000000"
            android:layout_width="@dimen/touchview_height_small"
            android:layout_height="@dimen/touchview_height_small"
            android:src="@drawable/read_report_light_jie" />

        <ImageButton
            android:id="@id/yjbg_light_jia"
            android:background="#00000000"
            android:src="@drawable/read_report_light_jia"
            android:layout_width="@dimen/touchview_height_small"
            android:layout_height="@dimen/touchview_height_small"
            android:layout_marginLeft="@dimen/view_margin_big" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin">

        <ImageButton
            android:id="@id/yjbg_light_exit"
            android:background="@drawable/read_report_pop_light_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@id/yjbg_light_yes"
            android:background="@drawable/read_report_pop_light_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_margin" />
    </LinearLayout>
</LinearLayout>