<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100.0dip" >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="3.0" >

                    <TextView
                        android:id="@id/old_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.0"
                        android:gravity="right"
                        android:text="原密码:"
                        android:textColor="#ff000000"
                        android:textSize="18.0sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0" >

                        <EditText
                            android:id="@id/changepassword_passwordold"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grzx_textview_background"
                            android:maxWidth="180.0dip"
                            android:password="true"
                            android:singleLine="true" 
                            android:textColor="#ff000000"
                            android:paddingLeft="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30.0dip"
                    android:layout_weight="3.0" >

                    <TextView
                        android:id="@id/old_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.0"
                        android:gravity="right"
                        android:text="新密码:"
                        android:textColor="#ff000000"
                        android:textSize="18.0sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0" >

                        <EditText
                            android:id="@id/changepassword_password1"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grzx_textview_background"
                            android:maxWidth="180.0dip"
                            android:password="true"
                            android:singleLine="true"
                            android:textColor="#ff000000" 
                            android:paddingLeft="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30.0dip"
                    android:layout_weight="3.0" >

                    <TextView
                        android:id="@id/old_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.0"
                        android:gravity="right"
                        android:text="新密码:"
                        android:textColor="#ff000000"
                        android:textSize="18.0sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0" >

                        <EditText
                            android:id="@id/changepassword_password2"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grzx_textview_background"
                            android:maxWidth="180.0dip"
                            android:password="true"
                            android:singleLine="true" 
                            android:textColor="#ff000000"
                            android:paddingLeft="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30.0dip"
                    android:visibility="gone"
                    android:weightSum="3.0" >

                    <TextView
                        android:id="@id/tv_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.0"
                        android:gravity="right"
                        android:text="电子邮箱:"
                        android:textColor="#ff000000"
                        android:textSize="18.0sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0" >

                        <EditText
                            android:id="@id/et_change_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grzx_textview_background"
                            android:maxWidth="180.0dip"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30.0dip"
                    android:visibility="gone"
                    android:weightSum="3.0" >

                    <TextView
                        android:id="@id/tv_card_kind"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.0"
                        android:gravity="right"
                        android:text="证件类型:"
                        android:textColor="#ff000000"
                        android:textSize="18.0sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0" >

                        <EditText
                            android:id="@id/et_card_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grzx_textview_background"
                            android:maxWidth="180.0dip"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30.0dip"
                    android:visibility="gone"
                    android:weightSum="3.0" >

                    <TextView
                        android:id="@id/tv_card_num"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.0"
                        android:gravity="right"
                        android:text="证件号码:"
                        android:textColor="#ff000000"
                        android:textSize="18.0sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0" >

                        <EditText
                            android:id="@id/et_card_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grzx_textview_background"
                            android:maxWidth="180.0dip"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30.0dip"
                    android:visibility="gone"
                    android:weightSum="3.0" >

                    <TextView
                        android:id="@id/tv_kind_num"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.0"
                        android:gravity="right"
                        android:text="电话号码:"
                        android:textColor="#ff000000"
                        android:textSize="18.0sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0" >

                        <EditText
                            android:id="@id/et_phone_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grzx_textview_background"
                            android:maxWidth="180.0dip"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@id/changepassword_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/touchview_height_small"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/change_button" 
                    android:text="修改"
                    android:textColor="#ffffff"
                    android:gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>