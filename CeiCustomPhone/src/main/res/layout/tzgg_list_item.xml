<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_gravity="center_vertical"
        android:background="@drawable/tzgg_list_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin_small"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_margin="@dimen/view_margin_small"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff000000"
            android:id="@id/tzgg_list_inf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff3c3c3c"
            android:id="@id/tzgg_list_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_margin_smallest"
            android:maxLength="10" />
    </LinearLayout>
</LinearLayout>