<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="@dimen/view_margin_smallest"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/view_margin_smallest" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            style="@style/bg_iv_bottom" />

        <ImageView
            android:id="@id/report_item_reportImg"
            style="@style/bg_iv"/>

    </FrameLayout>

    <TextView
        android:id="@id/report_item_reportName"
        style="@style/bg_tv_bottom" />

</LinearLayout>