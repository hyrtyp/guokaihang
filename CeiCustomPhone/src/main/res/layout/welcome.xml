<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/welcome"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/welcome_background" >

    <ImageView
        android:id="@id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="10.0dip"
        android:src="@drawable/guokaihang_logo" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@id/welcome_img_min"
            android:layout_width="380px"
            android:layout_height="80px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/guokaihangwecome_logo3" />
        
         <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等待中......"
                 android:layout_centerInParent="true"
                android:textColor="#ffffffff"
                android:textSize="15.0sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_img_min"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30.0dip" >
            
           

            <ImageView
                android:id="@id/welcome_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@anim/welcome_loading_anim" />

            <TextView
                android:id="@id/welcome_text_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0%"
                android:textColor="#ffffffff"
                android:textSize="10.0sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30.0dip"
        android:background="@drawable/welcome_word_2" 
        android:visibility="gone"/>

</RelativeLayout>