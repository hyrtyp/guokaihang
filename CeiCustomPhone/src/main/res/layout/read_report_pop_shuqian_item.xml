<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="@dimen/view_margin_small"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@id/yjbg_pop_shuqian_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:id="@id/yjbg_report_shuqian_bianji"
        android:background="@drawable/read_report_shuqian_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/screenview_margin_small"/>

</LinearLayout>